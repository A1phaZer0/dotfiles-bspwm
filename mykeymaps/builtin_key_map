! original layout
! keycode 108 = Alt_R
! keycode 64  = Alt_L
! keycode 133 = Super_L (Windows key)
! keycode 105 = Control_R
! keycode 37  = Control_L

! free up Alt from mod1
clear mod1
! free up Super from mod4
clear mod4
! free control
clear control

! remap Alt_L to Super_L Alt_R to Super_R
keycode 64  = Super_L
keycode 108 = Super_R
! remap Windows key to Alt_L Control_R to Alt_R
keycode 133 = Alt_L
keycode 105 = Alt_R

! add Alt back to mod1
add mod1 = Alt_L Alt_R
! add mod1 = Alt_R

! add Super back to mod4
add mod4 = Super_L Super_R

add control = Control_L
! add mod4 = Super_R
